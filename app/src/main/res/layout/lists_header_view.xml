<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="List Name"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="12dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/tvListName"
        android:textSize="18sp" />

    <TextView
        android:text="Make Default?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDefault"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvListName"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvListName"
        android:textSize="18sp" />


    <TextView
        android:text="Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvDefault"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDefault"
        android:id="@+id/tvShowLIst"
        android:layout_marginStart="8dp"
        android:textSize="18sp" />
</android.support.constraint.ConstraintLayout>