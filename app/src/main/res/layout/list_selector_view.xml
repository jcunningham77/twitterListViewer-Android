<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="ListName"
        android:layout_height="wrap_content"
        android:id="@+id/tvListName"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbMakeDefaultList"
        android:layout_width="200dp" />

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/cbMakeDefaultList"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvListName" />

    <Button
        android:text="View List"
        android:layout_width="wrap_content"
        android:id="@+id/buttonViewList"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/cbMakeDefaultList"
        app:layout_constraintBaseline_toBaselineOf="@+id/cbMakeDefaultList"
        android:textSize="10sp"
        style="@style/Widget.AppCompat.Button"
        android:layout_height="35dp" />

</android.support.constraint.ConstraintLayout>